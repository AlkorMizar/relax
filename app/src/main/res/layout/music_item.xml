<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_margin="6dp"
    android:layout_height="wrap_content"
    android:background="@drawable/outline2"
    android:backgroundTint="#6801080B"
    android:backgroundTintMode="add">

    <ImageView
        android:id="@+id/imageMusic"
        android:layout_width="115dp"

        android:layout_height="115dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/musicPaused"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:src="@drawable/ic_pause"
        app:layout_constraintBottom_toBottomOf="@+id/imageMusic"
        app:layout_constraintEnd_toEndOf="@+id/imageMusic"
        app:layout_constraintStart_toStartOf="@+id/imageMusic"
        app:layout_constraintTop_toTopOf="@+id/imageMusic" />

    <ImageView
        android:id="@+id/musicPlaying"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:src="@drawable/ic_pause"
        app:layout_constraintBottom_toBottomOf="@+id/imageMusic"
        app:layout_constraintEnd_toEndOf="@+id/imageMusic"
        app:layout_constraintStart_toStartOf="@+id/imageMusic"
        app:layout_constraintTop_toTopOf="@+id/imageMusic" />


    <TextView
        android:id="@+id/musicName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/courgette"
        android:text="Music name"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintStart_toEndOf="@+id/imageMusic"
        app:layout_constraintTop_toTopOf="@id/imageMusic" />

    <TextView
        android:id="@+id/musicAuthor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/courgette"
        android:text="Author"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toEndOf="@+id/imageMusic"
        app:layout_constraintTop_toBottomOf="@+id/musicName" />

    <TextView
        android:id="@+id/musicTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/brawler"
        android:text="4:30"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageMusic"
        app:layout_constraintStart_toEndOf="@+id/imageMusic" />

    <ImageView
        android:id="@+id/goBack"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="120dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_back_arr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/musicTime"
        app:layout_constraintVertical_bias="0.0" />


    <ImageView
        android:id="@+id/moveArr"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/ic_move_arr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/musicTime"
        app:layout_constraintVertical_bias="0.0" />

</androidx.constraintlayout.widget.ConstraintLayout>