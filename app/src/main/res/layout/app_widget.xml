<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/outline2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/calmWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:src="@drawable/ic_yin_and_yang_symbol" />

            <ImageView
                android:id="@+id/relaxWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_triskel_type_amfreville" />

            <ImageView
                android:id="@+id/concWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_the_great_buddha" />

            <ImageView
                android:id="@+id/agitWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_waves_svgrepo_com" />

            <ImageView
                android:id="@+id/sadWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_rain_svgrepo_com" />

            <ImageView
                android:id="@+id/happyWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_happy_emoji_svgrepo_com" />

            <ImageView
                android:id="@+id/angryWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/outline"
                android:layout_marginLeft="5dp"
                android:src="@drawable/ic_element_forecast_storm_stormy_thunder_svgrepo_com" />

        </LinearLayout>

        <TextView
            android:textAlignment="center"
            android:id="@+id/songArtistWidget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:text="Kurdt Cobain - Sappy" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/outline2"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/previousSongWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_back_arr" />

            <ImageView
                android:id="@+id/playStopSongWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_baseline_play_arrow_24" />

            <ImageView
                android:id="@+id/nextSongWidget"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_move_arr" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>