<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img"
    android:paddingTop="60dp"
    android:backgroundTint="#F0062630"
    android:backgroundTintMode="src_over">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/moodAdvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/courgette"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/moodAdvCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:fontFamily="@font/brawler"
            app:layout_constraintTop_toBottomOf="@id/moodAdvTitle"/>


        <TextView
            android:id="@+id/moodSwing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/courgette"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="35sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/moodAdvCont" />

        <TextView
            android:id="@+id/moodSwCont"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Content"
            android:layout_margin="20dp"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:fontFamily="@font/brawler"
            app:layout_constraintTop_toBottomOf="@id/moodSwing"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>